{
  "name": "ecb2vscode",
  "displayName": "coco3-extended-color-basic",
  "description": "Extended Color Basic 2 Language Support",
  "version": "1.0.0",
  "publisher": "ssorrrell",
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#6EE5E5",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "coco3",
    "color-computer-3",
    "super-extended-color-basic",
    "extended-color-basic",
    "basic"
  ],
  "bugs": {
    "url": "https://github.com/ssorrrell/coco3-extended-color-basic-vscode/issues"
  },
  "license": "MIT",
  "main": "./dist/extension",
  "activationEvents": [
    "onLanguage:ecb2"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ssorrrell/coco3-extended-color-basic-vscode.git"
  },
  "homepage": "https://github.com/ssorrrell/coco3-extended-color-basic-vscode",
  "contributes": {
    "languages": [
      {
        "id": "ecb2",
        "aliases": [
          "bas",
          "ecb2"
        ],
        "extensions": [
          ".bas",
          ".ecb",
          ".ecb2"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "vbs.runScript",
        "title": "%vbs.command.vbs.runScript%"
      },
      {
        "command": "vbs.killScript",
        "title": "%vbs.command.vbs.killScript%"
      }
    ],
    "grammars": [
      {
        "language": "ecb2",
        "scopeName": "source.bas",
        "path": "./syntaxes/ecb2.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ecb2",
        "path": "./snippets/ecb2.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ecb2vscode",
      "properties": {
        "ecb2.interpreter": {
          "type": "string",
          "default": "C:\\WINDOWS\\system32\\cscript.exe",
          "description": "%ecb2.config.interpreter.description%"
        },
        "ecb2.includes": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%ecb2.config.includes.description%"
        },
        "ecb2.showVariableSymbols": {
          "type": "boolean",
          "default": true,
          "description": "%ecb2.config.showVariableSymbols.description%"
        },
        "ecb2.showParamSymbols": {
          "type": "boolean",
          "default": false,
          "description": "%ecb2.config.showParamSymbols.description%"
        },
        "ecb2.custumIncludePattern": {
          "type": "string",
          "description": "%ecb2.config.customIncludePattern.description%",
          "deprecationMessage": "use customIncludePattern"
        },
        "ecb2.customIncludePattern": {
          "type": "string",
          "default": "\\binclude\\b[\\t ]*\\(?[\\t ]*\"([^\"]+)\"[\\t ]*\\)?",
          "description": "%ecb2.config.customIncludePattern.description%"
        },
        "ecb2.customIncludeDirs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          },
          "default": [
            ".",
            "${workspaceFolder}"
          ],
          "description": "%ecb2.config.customIncludeDirs.description%"
        }
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.43",
    "@types/vscode": "~1.43.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "mocha": "^8.3.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vscode-test": "^1.5.2"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint -c .eslintrc --ext .ts src",
    "watch": "tsc -watch -p ./",
    "test": "mocha dist/test/*.test.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-debugadapter": "^1.48.0"
  }
}
