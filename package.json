{
  "name": "ecb2vscode",
  "displayName": "coco3-extended-color-basic",
  "description": "Extended Color Basic 2 Language Support",
  "version": "0.0.4",
  "publisher": "ssorrrell",
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#6EE5E5",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "coco3",
    "color-computer-3",
    "super-extended-color-basic",
    "extended-color-basic",
    "basic"
  ],
  "bugs": {
    "url": "https://github.com/ssorrrell/coco3-extended-color-basic-vscode/issues"
  },
  "license": "MIT",
  "main": "./dist/extension",
  "activationEvents": [
    "onLanguage:ecb2"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ssorrrell/coco3-extended-color-basic-vscode.git"
  },
  "homepage": "https://github.com/ssorrrell/coco3-extended-color-basic-vscode",
  "contributes": {
    "languages": [
      {
        "id": "ecb2",
        "aliases": [
          "bas",
          "ecb2"
        ],
        "extensions": [
          ".bas",
          ".ecb",
          ".ecb2",
          ".demo"
        ],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "ecb2.crunch",
        "title": "%ecb2.command.ecb2.crunch%"
      },
      {
        "command": "ecb2.renumber",
        "title": "%ecb2.command.ecb2.renumber%"
      }
    ],
    "grammars": [
      {
        "language": "ecb2",
        "scopeName": "source.bas",
        "path": "./syntaxes/ecb2.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ecb2",
        "path": "./snippets/ecb2.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ecb2vscode",
      "properties": {
        "ecb2.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "ecb2.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the basicLanguageServer service."
        },
        "ecb2.interpreter": {
          "type": "string",
          "default": "C:\\WINDOWS\\system32\\cscript.exe",
          "description": "%ecb2.config.interpreter.description%"
        },
        "ecb2.includes": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%ecb2.config.includes.description%"
        },
        "ecb2.showVariableSymbols": {
          "type": "boolean",
          "default": true,
          "description": "%ecb2.config.showVariableSymbols.description%"
        },
        "ecb2.showParamSymbols": {
          "type": "boolean",
          "default": false,
          "description": "%ecb2.config.showParamSymbols.description%"
        },
        "ecb2.custumIncludePattern": {
          "type": "string",
          "description": "%ecb2.config.customIncludePattern.description%",
          "deprecationMessage": "use customIncludePattern"
        },
        "ecb2.customIncludePattern": {
          "type": "string",
          "default": "\\binclude\\b[\\t ]*\\(?[\\t ]*\"([^\"]+)\"[\\t ]*\\)?",
          "description": "%ecb2.config.customIncludePattern.description%"
        },
        "ecb2.customIncludeDirs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          },
          "default": [
            ".",
            "${workspaceFolder}"
          ],
          "description": "%ecb2.config.customIncludeDirs.description%"
        }
      }
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.43",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "mocha": "^8.3.2",
    "prettier": "^2.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.5.2",
    "vscode-test": "^1.6.1"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && copy-files-from-to",
    "lint": "eslint -c .eslintrc --ignore-path .eslintignore --ext .ts src",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "watch": "tsc -watch -p ./ && copy-files-from-to",
    "test": "mocha dist/test/*.test.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@vscode/test-electron": "^1.6.2",
    "vscode-debugadapter": "^1.50.0",
    "vscode-languageclient": "^7.0.0"
  },
  "configurationDefaults": {
    "[ecb2]": {
      "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?"
    }
  },
  "copyFiles": [
    {
      "from": "./src/definitions/en-US/**",
      "to": "./dist/definitions/en-US/"
    },
    {
      "from": "./markdown/**",
      "to": "./dist/markdown/"
    }
  ],
  "copyFilesSettings": {
    "whenFileExists": "overwrite",
    "removeSourceMappingURL": false,
    "uglifyJs": false,
    "addReferenceToSourceOfOrigin": false,
    "ignoreDotFilesAndFolders": true
  }
}
